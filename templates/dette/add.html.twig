{% extends 'base.html.twig' %}

{% block title %}Ajouter une Dette{% endblock %}

{% block body %}
    <h1>Ajouter une nouvelle Dette</h1>

    <!-- Affichage des messages d'erreur s'il y en a -->
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <form method="post" action="{{ path('app_dette_add') }}">
        <div class="form-group">
            <label for="client">Client</label>
            <select class="form-control" id="client" name="client_id" required>
                <option value="">Sélectionnez un client</option>
                {% for client in clients %}
                    <option value="{{ client.id }}">{{ client.surname }}</option>
                {% endfor %}
            </select>
            <div class="invalid-feedback">Ce champ est obligatoire.</div>
        </div>

        <div class="form-group">
            <label for="montant">Montant</label>
            <input type="number" class="form-control" id="montant" name="montant" placeholder="Entrez le montant" required>
            <div class="invalid-feedback">Ce champ est obligatoire.</div>
        </div>

        <div class="form-group">
            <label for="montantVerser">Montant Versé</label>
            <input type="number" class="form-control" id="montantVerser" name="montantVerser" placeholder="Entrez le montant versé" required>
            <div class="invalid-feedback">Ce champ est obligatoire.</div>
        </div>

        {# <div class="form-group">
            <label for="date">Date de Création</label>
            <input type="date" class="form-control" id="date" name="createAt" required>
            <div class="invalid-feedback">Ce champ est obligatoire.</div>
        </div> #}

        <button type="submit" class="btn btn-primary">Soumettre</button>
    </form>
{% endblock %}
