{% extends 'base.html.twig' %}

{% block title %}Liste des Clients{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Liste des Clients</h1>

        {# <div >
            {{form(searchClientForm)}}
        </div> #}

        <!-- Button to add a new client -->
        <div class="mb-3">
            <a href="{{ path('app_client_add') }}" class="btn btn-primary">Ajouter un nouveau client</a>
        </div>

        <!-- Clients table -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ client.id }}</td>
                        <td>{{ client.surname }}</td>
                        <td>{{ client.telephone }}</td>
                        <td>{{ client.adresse }}</td>
                        <td>
                            <a href="{{ path('app_client_dettes', { id: client.id }) }}" class="btn btn-info btn-sm">Voir les dettes</a>
                        </td>
                    </tr>
                    
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">Aucun client trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
            
        </table>
        <div class="pagination">
    {% if currentPage > 1 %}
        <a href="{{ path('client', { page: currentPage - 1 }) }}">Précédent</a>
    {% endif %}
    {% if currentPage < maxPages %}
        <a href="{{ path('client', { page: currentPage + 1 }) }}">Suivant</a>
    {% endif %}
</div>
